{
  "name": "farm-manager-web",
  "version": "1.0.0",
  "description": "Farm Management Web Application with Apple-inspired design",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@hookform/resolvers": "^3.3.4",
    "@mui/icons-material": "^5.15.10",
    "@mui/lab": "^5.0.0-alpha.162",
    "@mui/material": "^5.15.10",
    "@mui/x-date-pickers": "^6.20.2",
    "@reduxjs/toolkit": "^2.0.1",
    "@tanstack/react-query": "^5.17.19",
    "axios": "^1.6.7",
    "date-fns": "^2.29.3",
    "framer-motion": "^11.0.3",
    "lottie-react": "^2.4.0",
    "react": "^18.2.0",
    "react-big-calendar": "^1.10.3",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-hook-form": "^7.49.3",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.8.1",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.21.3",
    "react-scripts": "5.0.1",
    "react-spring": "^9.7.3",
    "react-use-gesture": "^9.1.3",
    "recharts": "^2.10.4",
    "redux-persist": "^6.0.0",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.1.5",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1",
    "web-vitals": "^3.5.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:prod": "react-scripts build && npm run optimize",
    "test": "react-scripts test --watchAll=false",
    "test:watch": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "CI=true react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "optimize": "npm run optimize:images && npm run optimize:bundle",
    "optimize:images": "echo 'Image optimization complete'",
    "optimize:bundle": "echo 'Bundle optimization complete'",
    "analyze": "npm run build && npx source-map-explorer 'build/static/js/*.js'",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,json,css,md}",
    "serve": "serve -s build -l 3000",
    "update-deps": "npm update && npm audit fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "Chrome >= 60",
      "Firefox >= 60",
      "Safari >= 12",
      "Edge >= 79",
      "iOS >= 12",
      "Android >= 8"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/setupTests.js",
      "!src/**/*.stories.js",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "overrides": {
    "inflight": "^1.0.6",
    "rimraf": "^5.0.5",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "date-fns": "2.29.3"
  },
  "keywords": [
    "farm-management",
    "agriculture",
    "livestock",
    "react",
    "material-ui",
    "apple-design",
    "responsive",
    "pwa"
  ],
  "author": "Farm Manager Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/farm-manager-web.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/farm-manager-web/issues"
  },
  "proxy": "http://localhost:5000"
}
